<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_popup_plain"
    android:orientation="vertical"
    android:padding="16dp">

    <RadioGroup
        android:id="@+id/rg_pattern_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rb_blank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blank" />

        <RadioButton
            android:id="@+id/rb_dots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dots" />

        <RadioButton
            android:id="@+id/rb_lines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lines (Ruled)" />

        <RadioButton
            android:id="@+id/rb_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grid" />
    </RadioGroup>

    <!-- Spacing Slider -->
    <LinearLayout
        android:id="@+id/layout_spacing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/tv_spacing_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spacing: 5 mm" />

        <SeekBar
            android:id="@+id/seekbar_spacing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="500"
            android:progress="50" />
    </LinearLayout>

    <!-- Size Slider (Radius / Thickness) -->
    <LinearLayout
        android:id="@+id/layout_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/tv_size_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Size: 1 mm" />

        <SeekBar
            android:id="@+id/seekbar_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="10" />
    </LinearLayout>

    <!-- Color Selection -->
    <LinearLayout
        android:id="@+id/layout_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Color" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/container_colors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp" />
        </HorizontalScrollView>
    </LinearLayout>

    <!-- Page Layout (Fixed Pages) -->
    <LinearLayout
        android:id="@+id/layout_page_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp">

        <CheckBox
            android:id="@+id/cb_center_align"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Center Pattern" />

        <!-- Top Padding -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/tv_padding_top_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Top Padding: 0 mm" />

            <SeekBar
                android:id="@+id/seekbar_padding_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100" />
        </LinearLayout>

        <!-- Bottom Padding -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/tv_padding_bottom_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bottom Padding: 0 mm" />

            <SeekBar
                android:id="@+id/seekbar_padding_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100" />
        </LinearLayout>

        <!-- Left Padding -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/tv_padding_left_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Left Padding: 0 mm" />

            <SeekBar
                android:id="@+id/seekbar_padding_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100" />
        </LinearLayout>

        <!-- Right Padding -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/tv_padding_right_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Right Padding: 0 mm" />

            <SeekBar
                android:id="@+id/seekbar_padding_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
